<?xml version="1.0" encoding="utf-8"?>
<!--User utility for creating and displaying tasks, interacting in realtime with database -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_content_bottom"
    tools:context=".fragments.CalendarFragment">

    <!-- Title for the Task Calendar -->
    <TextView
        android:id="@+id/calendar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="17dp"
        android:text="Calendar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button to Add create a task -->
    <ImageButton
        android:id="@+id/add_task_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/bg_fab"
        android:clickable="true"
        android:elevation="9dp"
        android:hapticFeedbackEnabled="true"
        android:padding="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_task"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary" />

    <!-- Divider Below Title -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/calendar_title"
        tools:layout_editor_absoluteX="0dp" />

    <!-- Calendar View to navigate or plot tasks recycler -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@style/CalendarDateStyle"
        android:focusedMonthDateColor="@style/CalendarDateStyle"
        android:weekDayTextAppearance="@style/CalendarWeekdayTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- Task Header -->
    <TextView
        android:id="@+id/task_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Tasks for Selected Date"
        android:textColor="@color/chat_sender"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    <!-- RecyclerView for Task List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="9dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_header"
        tools:listitem="@layout/fragment_calendar_recycler_item" />

</androidx.constraintlayout.widget.ConstraintLayout>