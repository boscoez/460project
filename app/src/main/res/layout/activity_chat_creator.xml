<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.ChatCreatorActivity">

    <!-- Back Button to Return to the Previous Screen -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="43dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/textviewTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textviewTitle"
        app:tint="@color/white" />

    <!-- Title for the Screen -->
    <TextView
        android:id="@+id/textviewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:gravity="center"
        android:paddingHorizontal="23dp"
        android:paddingVertical="5dp"
        android:text="Chat Creator"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView to Display Users -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="17dp"
        android:background="@drawable/bg_content_top"
        android:padding="11dp"
        app:layout_constraintBottom_toTopOf="@id/btnStartChat"
        app:layout_constraintTop_toBottomOf="@id/textviewTitle"
        tools:listitem="@layout/activity_chat_creator_item" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/chatCreatorProgressBar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/recyclerviewUsers"
        app:layout_constraintBottom_toBottomOf="@id/recyclerviewUsers"
        app:layout_constraintLeft_toLeftOf="@id/recyclerviewUsers"
        app:layout_constraintRight_toRightOf="@id/recyclerviewUsers"/>

    <!-- Button to Start the Chat with Selected Users -->
    <ImageButton
        android:id="@+id/btnStartChat"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_margin="17dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:enabled="false"
        android:scaleType="fitXY"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" /> <!-- Disabled by default until a user is selected -->

</androidx.constraintlayout.widget.ConstraintLayout>