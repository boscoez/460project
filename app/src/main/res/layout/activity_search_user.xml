<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.SearchUserActivity">

    <!-- Back Button to Return to the Previous Screen -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="43dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/editTextUsername"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/editTextUsername"
        app:tint="@color/white" />

    <!-- Search Input -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="9dp"
        android:layout_marginVertical="17dp"
        android:background="@drawable/bg_rectangle"
        android:backgroundTint="@color/input"
        android:elevation="4dp"
        android:hint="Find Chat Buddies"
        android:paddingHorizontal="23dp"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/input_hint"
        android:textSize="23sp"
        app:layout_constraintLeft_toRightOf="@id/btnBack"
        app:layout_constraintRight_toLeftOf="@id/btnSearchUsers"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Button -->
    <ImageButton
        android:id="@+id/btnSearchUsers"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/editTextUsername"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/editTextUsername"
        app:tint="@color/white" />


    <!-- RecyclerView to Display Users -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="17dp"
        android:background="@drawable/bg_content_top"
        android:padding="11dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStartChat"
        app:layout_constraintTop_toBottomOf="@id/editTextUsername"
        tools:listitem="@layout/activity_chat_creator_item" />

    <!-- Button to Start the Chat with Selected Users -->
    <ImageButton
        android:id="@+id/btnStartChat"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_margin="17dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:enabled="false"
        android:scaleType="fitXY"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>