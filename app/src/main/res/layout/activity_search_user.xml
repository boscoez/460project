<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.SearchUserActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="43dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:tint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/search_username_input"
        app:layout_constraintTop_toTopOf="@id/search_username_input"/>

    />

    <!-- Search Input -->
    <EditText
        android:id="@+id/search_username_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:hint="Find Chat Buddies"
        android:layout_marginHorizontal="17dp"
        android:paddingHorizontal="23dp"
        android:background="@drawable/bg_field_input"
        android:paddingVertical="5dp"
        android:textColor="@color/off_white"
        android:textColorHint="@color/light_gray"
        android:layout_marginVertical="17dp"
        android:textSize="23sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back_btn"
        app:layout_constraintRight_toLeftOf="@id/search_user_btn"/>

    <!-- Search Button -->
    <ImageButton
        android:id="@+id/search_user_btn"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/ic_search"
        app:tint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/search_username_input"
        app:layout_constraintTop_toTopOf="@id/search_username_input"/>


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_user_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_content_top"
        android:padding="17dp"
        android:layout_marginVertical="17dp"
        tools:listitem="@layout/activity_chat_creator_item"
        app:layout_constraintBottom_toTopOf="@+id/start_chat_btn"
        app:layout_constraintTop_toBottomOf="@id/search_username_input" />

    <!-- Start Chat Button -->
    <ImageButton
        android:id="@+id/start_chat_btn"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:tint="@color/white"
        android:enabled="false"
        android:layout_margin="17dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>