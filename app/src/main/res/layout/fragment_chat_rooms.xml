<?xml version="1.0" encoding="utf-8"?>
<!--
fragment_chat_rooms
This displays all rooms the current user is engaging with, or it displays a no chats message.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_content_bottom"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="126dp">

        <!-- Title for the Chat Room Screen -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your Chat Rooms"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fabNewChat"
            app:layout_constraintEnd_toStartOf="@+id/fabNewChat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fabNewChat" />

        <!-- Floating Action Button (FAB) to start a new chat -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fabNewChat"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Start a new chat"
            android:src="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/my_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/my_primary"
            app:layout_constraintTop_toBottomOf="@id/fabNewChat" />

        <!-- Message to display when no chats exist -->
        <TextView
            android:id="@+id/noChatsMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No chats started"
            android:textAlignment="center"
            android:textColor="@color/light_gray"
            android:textSize="25sp"
            android:textStyle="italic"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- RecyclerView to display the list of chat rooms -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:paddingTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>