<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="4dp">

    <!-- Left Message Layout (For Received Messages) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageLayoutLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Image for Received Message (Left) -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfileLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="@id/messageTextLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:riv_oval="true" />

        <!-- Message Bubble for Received Message -->
        <TextView
            android:id="@+id/messageTextLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_message_left"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Received message"
            android:textColor="@color/white"
            android:textSize="27sp"
            app:layout_constraintStart_toEndOf="@id/imageProfileLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.75" />

        <!-- Username and Timestamp for Received Message -->
        <TextView
            android:id="@+id/usernameTextLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/chat_sender"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/messageTextLeft"
            app:layout_constraintTop_toBottomOf="@id/messageTextLeft" />

        <TextView
            android:id="@+id/timestampTextLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="12:00 PM"
            android:textColor="@color/gray_light"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/usernameTextLeft"
            app:layout_constraintTop_toBottomOf="@id/messageTextLeft" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Right Message Layout (For Sent Messages) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageLayoutRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Image for Sent Message (Right) -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfileRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="@id/messageTextRight"
            app:layout_constraintEnd_toEndOf="parent"
            app:riv_oval="true" />

        <!-- Message Bubble for Sent Message -->
        <TextView
            android:id="@+id/messageTextRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_message_right"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Sent message"
            android:textColor="@color/white"
            android:textSize="27sp"
            app:layout_constraintEnd_toStartOf="@id/imageProfileRight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.75" />

        <!-- Username and Timestamp for Sent Message -->
        <TextView
            android:id="@+id/usernameTextRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/chat_receiver"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/messageTextRight"
            app:layout_constraintTop_toBottomOf="@id/messageTextRight" />

        <TextView
            android:id="@+id/timestampTextRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="12:00 PM"
            android:textColor="@color/gray_light"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/usernameTextRight"
            app:layout_constraintTop_toBottomOf="@id/messageTextRight" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>